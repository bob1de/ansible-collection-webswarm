---

# Admin accounts for authenticating against all deployed system services (Traefik API,
# Docker registry, Elastic stack)
{% if admin_usernames %}
admin_users:
{% for username in admin_usernames %}
  - username: {{ username | to_json }}
    password: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=30') | to_json }}
{% endfor %}
{% else %}
admin_users: []
{% endif %}

# Credentials for logging in hosts to the private Docker registry
registry_username_internal: registry_internal
registry_password_internal: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=30') | to_json }}

# Secret for authenticating data stored on clients by the Docker registry
registry_http_secret: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=60') | to_json }}

# Passwords for built-in Elasticsearch accounts
elasticsearch_builtin_passwords:
  elastic: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=30') | to_json }}
  kibana_system: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=30') | to_json }}
  logstash_system: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=30') | to_json }}
  beats_system: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=30') | to_json }}
  apm_system: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=30') | to_json }}
  remote_monitoring_user: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=30') | to_json }}

# Random UUID identifying the Kibana instance
kibana_server_uuid: {{ lookup('password', '/dev/null') | to_uuid | to_json }}

# Several encryption keys for storing authenticated data
kibana_xpack_security_encryption_key: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=60') | to_json }}
kibana_xpack_reporting_encryption_key: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=60') | to_json }}
kibana_xpack_encrypted_saved_objects_encryption_key: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=60') | to_json }}

# Elasticsearch user account to create for Filebeat.
filebeat_username: filebeat
filebeat_password: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=30') | to_json }}

# Password for the root@% MariaDB user.
mariadb_root_password: {{ lookup('password', '/dev/null chars=ascii_letters,digits length=30') | to_json }}
